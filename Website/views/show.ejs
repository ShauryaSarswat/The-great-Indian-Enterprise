<%- include ("partials/header") %>
<div class="ui main text container segment pb-0 text-light pl-3 pr-3" style="background-color: black">
    <div class="ui huge header mb-0" style="color: white;font-weight: 300"><center><h1 class="display-4"><%=blog.title%></h1></center></div>
    <div class="content mb-2">
               <center><span style="color: #cccaca ;margin-top: 0px;" > <%=blog.created.toDateString()%></span></center> 
             </div> 
    <div class="ui top attached">
        <div class="item">
             <img class="ui centered rounded image" src="<%=blog.image%>">
        
        <div class="description text-center rounded-lg" style="color: white;margin-top: 8px;margin-bottom: 8px; padding: 8px;">
                <p><%-blog.body%></p>
        </div>
        <form id="delete" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
            <button class="ui basic pink button" >Delete</button>
        </form>
      </div>
  </div>
</div>
<%- include ("partials/footer") %>